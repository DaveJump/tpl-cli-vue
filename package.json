{
  "name": "@djp6/tpl-cli-vue",
  "version": "1.0.0",
  "description": "A boilerplate tool for vue development",
  "bin": {
    "tplcli": "bin/tplcli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "lint:add": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node bin/release.js",
    "release:skipcl": "node bin/release.js --skip-changelog",
    "release:first": "node bin/release.js --first-release"
  },
  "keywords": [
    "cli",
    "boilerplate",
    "vue"
  ],
  "author": "DaveJump <davejump16@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davejump/tpl-cli-vue.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8.9"
  },
  "lint-staged": {
    "{bin,lib}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "didyoumean": "^1.2.1",
    "execa": "^3.0.0",
    "global-dirs": "^2.0.0",
    "import-global": "^0.1.0",
    "inquirer": "^7.0.0",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0"
  }
}
